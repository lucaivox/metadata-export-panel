      <%= current_user.created_at %>
      <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
      <%= link_to 'Account settings', edit_user_registration_path %>

    <% else %>

      <%= link_to 'Log in', new_user_session_path %>

    <% end %>
-->

  <%= render partial: "shared/navbar"%>

  <div class="container">
      <%= yield %>
  </div>
  </body>
</html>
